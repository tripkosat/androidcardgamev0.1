<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004400"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/infforbl"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/enablebluetooth"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttonxml"
            android:text="Ενεργοποίηση Bluetooth"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/continue11"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttonxml"
            android:text="Συνέχεια"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/gotomenu"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/buttonxml"
            android:text="Πίσω"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>