<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004400"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/newgame1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1.00"
        android:background="@drawable/buttonxml"
        android:text="Νέο Παιχνίδι"
        android:textColor="#EEEEEE"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/twoplayer_game"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1.00"
        android:background="@drawable/buttonxml"
        android:text="Παιχνίδι 2 Παικτών"
        android:textColor="#EEEEEE"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/options1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1.00"
        android:background="@drawable/buttonxml"
        android:text="Ρυθμίσεις"
        android:textColor="#EEEEEE"
        android:textSize="20sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/help1"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1.00"
        android:background="@drawable/buttonxml"
        android:text="Πληροφορίες"
        android:textColor="#EEEEEE"
        android:textSize="20sp"
        android:typeface="serif" />

</LinearLayout>